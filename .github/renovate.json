{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":pinVersions"
  ],
  "labels": ["dependencies"],
  "separateMajorMinor": true,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update versions with renovate comments",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$",
        "^Dockerfile$",
        "^build-standalone\\.sh$",
        "^scripts/.*\\.sh$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(\\s+extractVersion=(?<extractVersion>.+))?\\n\\s*\\S+:\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ]
    },
    {
      "customType": "regex",
      "description": "Update FFMPEG_VERSION in Dockerfile ARG",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ARG FFMPEG_VERSION=(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)"
      ],
      "depNameTemplate": "FFmpeg/FFmpeg",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^n(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update FFMPEG_VERSION in shell scripts",
      "fileMatch": ["^build-standalone\\.sh$", "^scripts/.*\\.sh$"],
      "matchStrings": [
        "FFMPEG_VERSION[=:].*[\"'{]?(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)[\"'}]?"
      ],
      "depNameTemplate": "FFmpeg/FFmpeg",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^n(?<version>.*)$"
    },
    {
      "customType": "regex",
      "description": "Update Go version in Dockerfile",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "golang:(?<currentValue>\\d+\\.\\d+\\.\\d+)-alpine"
      ],
      "depNameTemplate": "golang",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": []
}
